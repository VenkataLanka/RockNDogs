<% layout('layout') -%>

<% if (data.length === 0) { %>
<div class="container">
    <h3>Search for "<%= query %>" not found</h3>
    <% } else { %>
    <h3>Results for "<%= query %>"</h3>
    <div class="row">
        <% for (var i = 0; i < data.length; i++) { %>
        <div class="col-md-4">
            <a href="/dogfood/<%= data[i]._source._id %>">
                <div class="thumbnail">
                    <img src="<%= data[i]._source.image %>"/>
                    <div class="caption">
                        <h3><span style="font-weight: bold"><%= data[i]._source.title %></span></h3>
                        <h3><%= data[i]._source.description %></h3>
                        <h3>$<%= data[i]._source.Price %></h3>
                    </div>
                </div>
            </a>
        </div>
        <% } %>
    </div>
</div>
<% } %>



